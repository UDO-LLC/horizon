{% liquid
  assign product_resource = closest.product
  if request.visual_preview_mode and product_resource == blank
    assign product_resource = collections.all.products.first
  endif
-%}

{% render 'variant-main-picker', product_resource: product_resource %}

{% schema %}
{
  "name": "t:names.product_variant_picker",
  "tag": null,
  "settings": [
    {
      "type": "paragraph",
      "content": "t:content.resource_reference_product_variant_picker"
    },
    {
      "type": "paragraph",
      "content": "t:content.edit_variants_in_theme_settings"
    },
    {
      "type": "select",
      "id": "variant_style",
      "label": "t:settings.style",
      "options": [
        {
          "value": "dropdowns",
          "label": "t:options.dropdowns"
        },
        {
          "value": "buttons",
          "label": "t:options.buttons"
        }
      ],
      "default": "buttons"
    },
    {
      "type": "checkbox",
      "id": "show_swatches",
      "label": "t:settings.swatches",
      "default": true
    },
    {
      "type": "text_alignment",
      "id": "alignment",
      "label": "t:settings.alignment",
      "default": "left"
    },
    {
      "type": "header",
      "content": "t:content.padding"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "t:settings.top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "t:settings.bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 8
    },
    {
      "type": "range",
      "id": "padding-inline-start",
      "label": "t:settings.left",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding-inline-end",
      "label": "t:settings.right",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    },
    {
      "type": "header",
      "content": "Custom Variant Picker Settings"
    },
    {
      "type": "checkbox",
      "id": "enable_custom_settings",
      "label": "Enable Custom Variant Picker Settings",
      "info": "Enable this to apply the custom variant picker settings",
      "default": true
    },
    {
      "type": "header",
      "content": "Canvas Format"
    },
    {
      "type": "text",
      "id": "canvas_format_name",
      "label": "Canvas Format Option Name",
      "default": "Canvas Format",
      "info": "The Canvas Format Option Name"
    },
    {
      "type": "text",
      "id": "rolled_canvas_format_value",
      "label": "Rolled Canvas Format Option Value",
      "default": "Full Kit - No Frame",
      "info": "The Rolled Canvas Format Option Value"
    },
    {
      "type": "textarea",
      "id": "rolled_canvas_format_value_description",
      "label": "Rolled Canvas Format Option Value Description",
      "default": "No Frame",
      "info": "The Rolled Canvas Format Option Value Description"
    },
    {
      "type": "image_picker",
      "id": "rolled_canvas_format_icon",
      "label": "Rolled Canvas Format Icon",
      "info": "The Rolled Canvas Format Icon"
    },
    {
      "type": "text",
      "id": "stretched_canvas_format_value",
      "label": "Stretched Canvas Format Option Value",
      "default": "Full Kit - Framed",
      "info": "The Stretched Canvas Format Option Value"
    },
    {
      "type": "textarea",
      "id": "stretched_canvas_format_value_description",
      "label": "Stretched Canvas Format Option Value Description",
      "default": "Framed",
      "info": "The Stretched Canvas Format Option Value Description"
    },
    {
      "type": "image_picker",
      "id": "stretched_canvas_format_icon",
      "label": "Stretched Canvas Format Icon",
      "info": "The Stretched Canvas Format Icon"
    },
    {
      "type": "header",
      "content": "Number of Palette Colors"
    },
    {
      "type": "text",
      "id": "number_of_palette_colors_name",
      "label": "Number of Palette Colors Option Name",
      "default": "Color Palette",
      "info": "The Number of Palette Colors Option Name"
    },
    {
      "type": "text",
      "id": "palette_colors_24_value",
      "label": "24 Palette Colors Option Value Name",
      "default": "24 Colors",
      "info": "The 24 Palette Colors Option Value"
    },
    {
      "type": "text",
      "id": "palette_colors_24_description",
      "label": "24 Palette Colors Option Value Description",
      "default": "For Beginners",
      "info": "The 24 Palette Colors Option Value Description"
    },
    {
      "type": "text",
      "id": "palette_colors_36_value",
      "label": "36 Palette Colors Option Value Name",
      "default": "36 Colors",
      "info": "The 36 Palette Colors Option Value"
    },
    {
      "type": "text",
      "id": "palette_colors_36_description",
      "label": "36 Palette Colors Option Value Description",
      "default": "6+ hours painting",
      "info": "The 36 Palette Colors Option Value Description"
    },
    {
      "type": "text",
      "id": "palette_colors_48_value",
      "label": "48 Palette Colors Option Value Name",
      "default": "48 Colors",
      "info": "The 48 Palette Colors Option Value"
    },
    {
      "type": "text",
      "id": "palette_colors_48_description",
      "label": "48 Palette Colors Option Value Description",
      "default": "12+ hours painting",
      "info": "The 48 Palette Colors Option Value Description"
    },
    {
      "type": "text",
      "id": "printed_palette_colors_value",
      "label": "Printed Palette Colors Option Value Name",
      "default": "Printed",
      "info": "The Printed Palette Colors Option Value"
    },
    {
      "type": "text",
      "id": "printed_palette_colors_value_description",
      "label": "Printed Palette Colors Option Value Description",
      "default": "Not a painting kit",
      "info": "The Printed Palette Colors Option Value Description"
    }
  ],
  "presets": [
    {
      "name": "t:names.product_variant_picker",
      "category": "t:categories.product"
    }
  ]
}
{% endschema %}
