{% comment %}
  Upsell Products Block Styles
{% endcomment %}

<style>
  .upsell-products {
    margin-top: 1rem;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    transition: opacity 0.3s ease, transform 0.3s ease;
  }

  .upsell-products[style*="display: none"] {
    opacity: 0;
    transform: translateY(-10px);
  }

  .product-block--upsell {
    transition: opacity 0.3s ease, transform 0.3s ease;
  }

  .product-block--upsell[style*="display: none"] {
    opacity: 0;
    transform: translateY(-10px);
  }

  .upsell-product__item {
    display: flex;
    align-items: center;
    padding: 0.5rem;
    gap: 1rem;
    border-radius: 0.5rem;
    border: 1px solid var(--color-border, #e5e5e5);
    background: var(--color-bg, #ffffff);
    color: var(--color-text, #333);
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
    cursor: pointer;
    transition: all 0.2s ease;
    position: relative;
  }

  .upsell-product__item img {
    width: 5rem;
    height: 5rem;
    min-width: 5rem;
    border-radius: 0.375rem;
    object-fit: cover;
  }

  .upsell-product__content {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .upsell-product__content h4 {
    font-size: 1rem;
    font-weight: 600;
    margin: 0 0 0.25rem 0;
    color: inherit;
  }

  .upsell-product__description {
    font-size: 0.875rem;
    color: var(--color-text-secondary, #6b7280);
    margin: 0 0 0.25rem 0;
    line-height: 1.4;
  }

  .upsell-product__price {
    font-size: 1rem;
    font-weight: 700;
    margin: 0;
    color: inherit;
  }

  .upsell-product__compare-price {
    color: var(--colorTextBody);
    opacity: 0.6;
    padding-left: 8px;
    display: inline-block;
    -webkit-text-decoration: line-through;
    text-decoration: line-through;
  }

  /* Hide the actual checkbox input */
  .upsell-product__checkbox-input {
    position: absolute;
    opacity: 0;
    pointer-events: none;
    width: 0;
    height: 0;
  }

  /* Style the visual checkbox */
  .upsell-product__checkbox {
    width: 1.25rem;
    height: 1.25rem;
    border: 2px solid #d1d5db;
    border-radius: 50%;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
    position: relative;
    cursor: pointer;
  }

  /* Visual checkbox dot */
  .upsell-product__checkbox::after {
    content: '';
    width: 0.5rem;
    height: 0.5rem;
    background: white;
    border-radius: 50%;
    opacity: 0;
    transition: opacity 0.2s ease;
  }

  .upsell-product__item:hover {
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transform: translateY(-1px);
  }

  .upsell-product__item:hover .upsell-product__checkbox {
    border-color: #3b82f6;
  }

  /* Checked state styling */
  .upsell-product__checkbox-input:checked + .upsell-product__checkbox {
    border-color: #3b82f6;
    background: #3b82f6;
  }

  .upsell-product__checkbox-input:checked + .upsell-product__checkbox::after {
    opacity: 1;
  }

  .upsell-product__item.upsell-product__item--selected {
    border-color: #3b82f6;
    background: rgba(59, 130, 246, 0.05);
    box-shadow: 0 2px 4px rgba(59, 130, 246, 0.2);
  }

  .upsell-product__item.upsell-product__item--selected:hover {
    box-shadow: 0 4px 8px rgba(59, 130, 246, 0.3);
  }

  /* Add to Cart Button Styles when upsell products are selected */
  .btn--upsell-selected {
    background: linear-gradient(135deg, #3b82f6, #1d4ed8) !important;
    border-color: #3b82f6 !important;
    color: white !important;
    position: relative;
    overflow: hidden;
    animation: upsellPulse 2s infinite;
  }

  .btn--upsell-selected:hover {
    background: linear-gradient(135deg, #2563eb, #1e40af) !important;
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(59, 130, 246, 0.4);
  }

  .btn--upsell-selected::before {
    content: 'âœ¨';
    position: absolute;
    left: 10px;
    top: 50%;
    transform: translateY(-50%);
    font-size: 0.9em;
    animation: sparkle 1.5s infinite;
  }

  /* Pulse animation for selected button */
  @keyframes upsellPulse {
    0%, 100% {
      box-shadow: 0 0 0 0 rgba(59, 130, 246, 0.7);
    }
    50% {
      box-shadow: 0 0 0 10px rgba(59, 130, 246, 0);
    }
  }

  /* Sparkle animation */
  @keyframes sparkle {
    0%, 100% {
      opacity: 1;
      transform: translateY(-50%) scale(1);
    }
    50% {
      opacity: 0.7;
      transform: translateY(-50%) scale(1.1);
    }
  }



  /* Upsell products summary indicator */
  .upsell-summary {
    background: rgba(59, 130, 246, 0.1);
    border: 1px solid rgba(59, 130, 246, 0.2);
    border-radius: 0.5rem;
    padding: 0.75rem;
    margin-top: 0.5rem;
    font-size: 0.875rem;
    color: #1e40af;
    display: none;
  }

  .upsell-summary.show {
    display: block;
    animation: slideDown 0.3s ease;
  }

  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 768px) {
    .upsell-product__item {
      padding: 0.75rem;
      gap: 0.75rem;
    }

    .upsell-product__item img {
      width: 4rem;
      height: 4rem;
      min-width: 4rem;
    }

    .upsell-product__content h4 {
      font-size: 0.875rem;
    }

    .upsell-product__description {
      font-size: 0.8rem;
    }

    .upsell-product__price {
      font-size: 0.875rem;
    }

    /* Mobile button adjustments */
    .btn--upsell-selected::before {
      left: 8px;
      font-size: 0.8em;
    }
  }
</style>
